<h1>基本情報</h1>

    <%= form_for(@user) do |f| %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>

    <% end %>
 