<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
        <%= link_to "edit" , edit_user_path %>
     </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <%#= render 'microposts/favorite_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>